<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <LinearLayout
      android:id="@+id/main_content"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_above="@+id/main_toolbar"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:orientation="vertical"/>
    
    
    <LinearLayout
      android:id="@+id/main_toolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentLeft="true"
      android:orientation="vertical">
        
        <ImageView
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#ffffff" />
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:gravity="center_vertical"
          android:orientation="horizontal">
            <RadioButton
              android:id="@+id/fr_platform_menu"
              style="@style/radiobutton_bottom"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:checked="true"
              android:drawableTop="@drawable/fr_platform_index_selector"
              android:text="@string/fr_directory" />
            <RadioButton
              android:id="@+id/fr_platform_collection"
              style="@style/radiobutton_bottom"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:checked="false"
              android:drawableTop="@drawable/fr_platform_collection_selector"
              android:text="@string/fr_favorites" />
        </LinearLayout>
    
    </LinearLayout>


</RelativeLayout>