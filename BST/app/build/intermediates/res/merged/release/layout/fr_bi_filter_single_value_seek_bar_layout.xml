<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

    <com.fr.android.bi.parameter.ui.widget.core.CoreRangeSeekBar
      android:id="@+id/fr_bi_seek_bar"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      android:padding="20dp"/>

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="10dp"
      android:background="@color/fr_bi_light_gray"/>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:text="@string/fr_bi_number_value"
      android:textSize="16sp"/>

    <EditText
      android:id="@+id/fr_bi_number_value"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      style="@style/IFBIBaseEditText"
      android:inputType="number"/>

</LinearLayout>